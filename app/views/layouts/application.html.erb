<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-info">
          <div class="container">
            <a class="navbar-brand" href="admin/homes">
              <span>ながのCAKE</span>
            </a>
            <button class="navbar-toggler" tupe="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <ul>
              <% if customer_signed_in? %>
                <li>マイページ"</li>
                <li>商品一覧</li>
                <li>カート</li>
                <li>ログアウト</li>
              <% elsif admin_signed_in? %>
                <li><%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "会員一覧",admin_customers_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "注文履歴一覧", admin_homes_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark'%></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %></li>
              <% else %>
                <li>About</li>
                <li>商品一覧</li>
                <li>新規登録</li>
                <li><%= link_to "ログイン", new_admin_session_path, class: 'nav-link text-dark' %></li>
              <% end %>
            </ul>
          </div>
        </nav>
    </header>
    
    <main class="mb-auto">
      <%= yield %>
    </main>
    
    <footer class="footer"></footer>
    
  </body>
</html>
