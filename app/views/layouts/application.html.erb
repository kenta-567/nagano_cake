<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
        <nav class="navbar navbar-expand-lg pt-5 pb-5 navbar-light bg-light">
         
            <a class="navbar-brand" href="admin/homes">
              <span>ながのCAKE</span>
            </a>
            <button class="navbar-toggler" tupe="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
              <ul class="nav nav-pills">
                <% if customer_signed_in? %>
                  <li class="nav-item px-2"><%= link_to "マイページ", customers_my_page_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "商品一覧", items_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "カート", cart_items_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link active' %></li></li>
                <% elsif admin_signed_in? %>
                  <li class="nav-item px-2"><%= link_to "商品一覧", admin_items_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "会員一覧",admin_customers_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "注文履歴一覧", admin_homes_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link active'%></li>
                  <li class="nav-item px-2"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link active' %></li>
                <% else %>
                  <li class="nav-item px-2"><%= link_to "About", about_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "商品一覧", items_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "新規登録", new_customer_registration_path, class: 'nav-link active' %></li>
                  <li class="nav-item px-2"><%= link_to "ログイン", new_admin_session_path, class: 'nav-link active' %></li>
                <% end %>
              </ul>
            </div>
         
        </nav>
    </header>
    
    <main class="mb-auto">
      <%= yield %>
    </main>
    
    <footer class="fixed-bottom bg-info p-5"></footer>
    
  </body>
</html>
