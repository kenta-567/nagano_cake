<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light d-flex">
        <a class="navbar-brand mt-3" href="/">
          <%= image_tag "linkedin_banner_image_1.png", size:'160x80' %>
        </a>
        <div class="ml-auto">
          <ul class="nav nav-pills">
            <% if customer_signed_in? %>
            <div class="row mt-5 mr-4">
              <li class="nav-item mx-2 px-2"><%= link_to "マイページ", customers_my_page_path, class: 'btn btn-default active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "商品一覧",public_items_path, class: 'btn btn-default active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "カート", public_cart_items_path, class: 'btn btn-default active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default active' %></li>
            </div>
            <% elsif admin_signed_in? %>
            <div class="row col-9 mt-3 offset-4">
              <li class="nav-item px-2"><%= link_to "商品一覧", admin_items_path, class: 'btn btn-default-admin active' %></li>
              <li class="nav-item px-2"><%= link_to "会員一覧",admin_customers_path, class: 'btn btn-default-admin active' %></li>
              <li class="nav-item px-2"><%= link_to "注文履歴一覧", admin_homes_path, class: 'btn btn-default-long active' %></li>
              <li class="nav-item px-2"><%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-default-long active'%></li>
              <li class="nav-item px-2"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default-logout active' %></li>
            </div>
            <div class="row mt-3 mr-3 col-5  offset-8">
              <% if admin_signed_in? %>
                <form class="form-inline">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search">
                      <span class="input-group-btn">
                        <button class="btn search"><i class="fas fa-search fa-flip-horizontal"></i></button>
                      </span>
                    </input>
                  </div>
                </form>
              <% end %>
            </div>
            <% else %>
            <div class="row mt-5 mr-4">
              <li class="nav-item mx-2 px-2"><%= link_to "About", about_path, class: 'btn btn-default-about text-centr active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "商品一覧", public_items_path, class: 'btn btn-default active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default active' %></li>
              <li class="nav-item mx-2 px-2"><%= link_to "ログイン", new_customer_session_path, class: 'btn btn-default active' %></li>
            </div>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
      <%= yield %>
    </main>
    
    <footer class="footer"></footer>
  </body>
</html>
