<div class="container">
  <div class="row col-2 offset-1 justify-content-center mt-4 mb-3 mb-3 ">
    <h3><strong>商品一覧</strong></h3>
  </div>
  <div class="row col-10 offset-1 d-flex justify-content-center flex-wrap">
    <% @items.each do |item| %>
    <div class="box d-flex flex-column mt-4 col-3">
      <div class="">
        <%= link_to public_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size:"160x100", fallback: "no_image.jpg" %>
        <% end %>
      </div>
      <span class="my-3"><%= item.name %></span>
      <span>￥<%= item.price.to_s(:delimited, delimiter: ',') %></span>
    </div>
    <% end %>
  </div>
  <div class="col-2 offset-5 justify-content-center mt-5">
    <span class="text-align"><u><%= paginate @items %></u></span>
  </div>
</div>