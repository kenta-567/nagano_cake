<div class="conteiner">
  <div class="row justify-content-center mt-5">
    <div class="col-2 mr-3 pt-1 px-0">
      <%= attachment_image_tag @item, :image, size: "270x190", fallback: "no_image.jpg" %>
    </div>
    <div class="col-4 ml-4">
      <h4><%= @item.name %></h4>
      <text><%= @item.introduction %></text>
      <div class="row mt-5 pt-5">
        <h4 class="mt-3 mb-2 px-2">￥<%= @item.price.to_s(:delimited, delimiter: ',') %></h4><p class="mt-4 mb-4">(税込)</p>
      </div>
      <div class="row pl-3">
        <%= form_with model: @cart_item, url: public_cart_items_path, local:true do |f| %>
        <div class="d-flex">
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
          <%= f.submit 'カートに入れる', class:"btn btn-sm btn-success px-3 offset-3  py-2" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>