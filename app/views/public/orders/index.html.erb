<div class="conteiner">
  <div class="row col-3 offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">注文履歴一覧</h5>
  </div>
  
  
  <div class="row col-11 ml-4">
    <table class="table table-bordered border-dark mt-4">
      <thead class="bg-light">
        <tr>
          <th style="width:15%;">注文日</th>
          <th style="width:40%;">配送先</th>
          <th style="width:15%;">注文商品</th>
          <th style="width:8%;">支払金額</th>
          <th style="width:10%;">ステータス</th>
          <th style="width:12%;">注文詳細</th>
        </tr>
      </thead>
      <tbody class="solid">
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle pl-1 pr-0">
              <%= order.created_at %>
            </td>
            <td class="align-middle pl-1 pr-0">
              <%= order.postal_code %><br><%= order.address %><br><%= order.name %>
            </td>
            <td class="align-middle pl-1 pr-0">
              <%= order.item.name %>
            </td>
            <td class="align-middle pl-1 pr-0">
              <%= order.total_payment %>
            </td>
            <td class="align-middle pl-1 pr-0">
              <%= order.status %>
            </td>
            <td class="text-center">
              <%= link_to "表示する", public_order_path(current_customer), class: 'btn btn-primary px-2 py-1 mx-1 btn-sm' %>
            </td>  
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>