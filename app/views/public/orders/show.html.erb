<div class="conteiner">
  <div class="row">
    <h5>注文履歴詳細</h5>
  </div>
  
  <div class="row">
    <span>注文情報</span>
    <table class="table table-bordered col-7">
      <tr class="bg-light">
        <td style="width:15%;">注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr class="bg-light">
        <td style="width:15%;">配送先</td>
        <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr class="bg-light">
        <td style="width:15%;">支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr class="bg-light">
        <td style="width:15%;">ステータス</td>
        <td><%= @order.status %></td>
      </tr>
    </table>
    
    <span>請求情報</span>
    <table class="table table-bordered col-3 offset-1">
      <tr>
        <td class="bg-light" style="width:50%;">商品合計</td>
        <td><%= @total.to_s(:delimited, delimiter: ',') %></td>
      </tr>
      <tr>
        <td class="bg-light" style="width:50%;">配送料</td>
        <td><%= @order.shipping_cost.to_s(:delimited, delimiter: ',') %></td>
      </tr>
      <tr>
        <td class="bg-light" style="width:50%;">ご請求金額</td>
        <td><%= @order.total_payment.to_s(:delimited, delimiter: ',') %></td>
      </tr>  
    </table>
  </div>
  
  <div class="row">
    <span>注文内容</span>
    <table class="table table-bordered col-7">
      <thead class="bg-light">
        <tr>
          <th>商品</th>
          <th style="width:15%;">単価(税込)</th>
          <th style="width:15%;">個数</th>
          <th style="width:15%;">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_detail.each do |order_detail| %>
          <tr>
          　<td class="p-1"><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price.to_s(:delimited, delimiter: ',') %></td>
            <td class="pl-1"><%= @order.amount %></td>
            <td><%= order_detail.item.price * order_detail.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div>