<div class="conteiner">
  <div class="row offset-1 mb-0">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">注文情報確認</h5>
  </div>
 <%= form_with model: @orders, url: orders_path, class: "col-10 ml-4", local:true do |f| %> 
  <div class="row">
    
    <table class="table-bordered col-6">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th style="width:15%;">単価(税込)</th>
          <th style="width:15%;">数量</th>
          <th style="width:15%;">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
          　<td><%= attachment_image_tag cart_item.item, :image, size: "40x40", fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price.to_s(:delimited, delimiter: ',') %></td>
            <td class="text-center"><%= cart_item.amount %></td>
            <td><%= cart_item.item.price.to_i * cart_item.amount.to_i %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <table class="table-bordered col-3 offset-1">
      <tr>
        <td class="bg-light" style="width:50%;"><label>送料</label></td>
        <td><%= @order.shipping_cost.to_s %></td>
      </tr>
      <tr>
        <td class="bg-light" style="width:50%;"><label>商品合計</label></td>
        <td><%= @total.to_s(:delimited, delimiter: ',') %></td>
      </tr>
      <tr>
        <td class="bg-light" style="width:50%;"><label>請求金額</label></td>
        <td><label><%= @order.shipping_cost.to_i + @total.to_i %></label></td>
      </tr>  
    </table>
    
  </div>
  
  <div class="row mt-4 ml-4">
    <label class="mr-3">支払方法</label>
    <label><%= @order.payment_method %></label>
  </div>
  <div class="row mt-4 ml-4">
    <label class="mr-3">お届け先</label>
    <label><%= @order.postal_code %><%= @order.address %><%= @order.name %></label>
  </div>
  <% end %>
  <div class="row offset-4">
    <%= link_to "注文を確定する", orders_thanks_path, class: 'nav-link btn btn-primary px-3 py-2 btn-sm' %>
  </div>
</div>
