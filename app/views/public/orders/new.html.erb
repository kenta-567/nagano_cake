<div class="conteiner">
  <div class="row col-4 offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">注文情報入力</h5>
  </div>
  <%= form_with model: @order, url: orders_confirm_path, class: "col-10 my-4", local:true do |f| %>
    <div class="offset-1  mb-3">
      <div class="row">
        <h5>支払方法</h5>
      </div> 
      <div class="row flex-column">
        <div class="radio-inline ml-5">
          <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
          <%= f.label :クレジットカード, class: "payment_method_label" %>
        </div>
        <div class="radio-inline ml-5">
          <%= f.radio_button :payment_method, :銀行振込 %>
          <%= f.label :銀行振込, class: "payment_method_label" %>
        </div>
      </div>
    </div>
    
    <div class="offset-1">
      <div class="row">
        <h5>お届け先</h5>
      </div>  
      <div class="row">   
        <div class="radio-inline ml-5">
          <%= radio_button :address, :address_kind, 1 %>
          <%= f.label :ご自身の住所, class: "mb-0" %>
          <div class="ml-5">
            <label class="mb-0">〒<%= current_customer.postal_code %><%= current_customer.address %></label><br>
            <label><%= current_customer.full_name %></label>
          </div>
        </div> 
      </div>  
      <div class="row">  
        <div class="radio-inline ml-5 mb-2">
          <%= radio_button :address, :address_kind, 2 %>
          <%= f.label :登録済住所から選択, class: "mb-0" %>
          <div class="ml-5">
            <%= f.collection_select :address_id, Address.all, :id, :full_address, class: 'form-select pl-0', style: "width: 200px;" %>
          </div>  
        </div>
      </div>  
      <div class="row">  
        <div class="radio-inline ml-5 col-10 pl-0">
          <%= radio_button :address, :address_kind, 3 %>
          <%= f.label :新しいお届け先, class: "mb-0" %>
          <div class="form-group ml-5 row">
            <label class="col-3 pt-1 mb-0">郵便番号(ハイフンなし)</label>
            <%= f.text_field :postal_code, class:"form-control col-3" %>
          </div>
          <div class="form-group ml-5 row">
            <label class="col-3 pt-1 mb-0">住所</label>
            <%= f.text_field :address, class:"form-control col-6" %>
          </div>
          <div class="form-group ml-5 row">
            <label class="col-3 pt-1 mb-0">宛名</label>
            <%= f.text_field :name, class:"form-control col-3" %>
          </div>
        </div>
      </div>  
      <div class="col-5 text-right">
        <%= f.submit '確認画面へ進む', class:"btn btn-sm px-3 py-1 btn-success" %>
      </div>
    </div>  
  <% end %>
</div>