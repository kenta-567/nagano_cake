<div class="conteiner">
  <div class="row col-4 offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">配送先登録/一覧</h5>
  </div>
  
  <div class="row col-10 offset-1">
    <%= form_with model: @address, url: public_addresses_path, class: "col-10 my-4", local:true do |f| %>
      <div class="form-group row">
        <label class="col-3">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, class:"form-control col-3", placeholder:"郵便番号(ハイフンなし)" %>
      </div>
      <div class="form-group row">
        <label class="col-3">住所</label>
        <%= f.text_field :address, class:"form-control col-6", placeholder:"住所" %>
      </div>
      <div class="form-group row">
        <label class="col-3">宛名</label>
        <%= f.text_field :name, class:"form-control col-3", placeholder:"宛名" %>
        <div class="col-5 text-right">
          <%= f.submit '新規登録', class:"btn btn-sm px-5 py-1 btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
  
  <div class="row row col-10 offset-1">
    <table class="table table-border border-dark mt-4 col-5">
      <thead class="bg-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class="solid">
        <% @addresses.each do |address| %>
        <tr>
          <td class="pt-4">
            <span><%= address.postal_code %></span>
          </td>
          <td>
            <span><%= address.address %></span>
          </td>
          <td>
            <span><%= address.name %></span>
          </td>
          <td>
            <%= link_to "編集する", edit_public_address_path(address.id), class: 'nav-link btn btn-success px-1 btn-ms' %>
            <%= link_to "削除する", public_address_path(address.id), method: :delete,  "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger px-2 py-1" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>