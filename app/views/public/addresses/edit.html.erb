<div class="container-fluid">
  <div class="row col-4 offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">配送先編集</h5>
  </div>
  
  <div class="row col-12">
    <%= form_with model: @address, url: public_address_path, class: "col-10 my-4", local:true do |f| %>
      <div class="form-group row">
        <label class="col-3">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, class:"form-control col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3">住所</label>
        <%= f.text_field :address, class:"form-control col-6" %>
      </div>
      <div class="form-group row">
        <label class="col-3">宛名</label>
        <%= f.text_field :name, class:"form-control col-3" %>
        <div class="col-5 text-right">
          <%= f.submit '変更内容を保存', class:"btn btn-sm px-3 py-1 btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
</div>