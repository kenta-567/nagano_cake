<div class="container">
  <div class="row">
    <h5 class="col-2 m-4 bg-light text-center">配送先編集</h5>
  </div>
  <div class="row">
    <%= form_with model: @address, url: public_address_path, class: "d-flex flex-row align-items-center my-4", local:true do |f| %>
      <div class="col-6">
        <label>郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, class:"form-control" %>
      </div>
      <div class="col-6">
        <label>住所</label>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="col-6">
        <label>宛名</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="col-4 text-right">
        <%= f.submit '変更内容を保存', class:"btn btn-md px-4 btn-success" %>
      </div>
    <% end %>
  </div>
</div>