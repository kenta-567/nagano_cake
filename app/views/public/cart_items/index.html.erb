<div class="conteiner">
  
  <div class="row offset-2 col-7 d-flex justify-content-between mt-4 mb-2">
    <h5 class="px-3 bg-light">ショッピングカート</h5>
    <%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete,  "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger px-2 py-1" %>
  </div>
  <div class="row">
    <table class="table-bordered col-7 offset-2">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th style="width:15%;">単価(税込)</th>
          <th style="width:15%;">数量</th>
          <th style="width:15%;">小計</th>
          <th colspan="3" style="width:15%;"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
           <td><%= attachment_image_tag cart_item.item, :image, size: "40x40", fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price.to_s(:delimited, delimiter: ',') %></td>
            <td class="text-center">
              <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), local:true do |f| %>
                <%= f.select :amount, options_for_select((1..20).to_a, selected: cart_item.amount) %>
                <%= f.submit '変更', class:"btn btn-sm btn-success ml-2 px-1 py-1" %>
              <% end %>
            </td>
            <td><%= cart_item.item.price.to_i * cart_item.amount.to_i %></td>
            <td class="text-center">
              <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete,  "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger px-2 py-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row col-7 offset-2 mt-4 d-flex justify-content-between">
    <div>
      <%= link_to "買い物を続ける", root_path, class: 'nav-link btn btn-primary px-3 py-2 btn-sm' %>
    </div>
    <div class="mt-3 inline-block border border-dark" >
      <lavel class="pl-1 pr-5 py-3 bg-light" >合計金額</lavel>
      <label class=" pl-1 pr-5 py-3"><%= @total %></label>
    </div>
  </div>
  <div class="row offset-5">
    <%= link_to "情報入力に進む", new_public_order_path, class: 'nav-link btn btn-primary px-3 py-2 btn-sm' %>
  </div>
</div>