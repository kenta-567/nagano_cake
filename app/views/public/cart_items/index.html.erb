<div class="conteiner">
  
  <div class="row">
    <h5 class="px-3 bg-light">ショッピングカート</h5>
  </div>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @sum = 0 %>
        <%= @cart_item.each do |cart_item| %>
        <tr>
          <td><%= attachment_image_tag cart_item, :image, size: "40x40", fallback: "no_image.jpg" %><%= cart_item.name %></td>
          <td><%= cart_item.price.to_s(:delimited, delimiter: ',') %></td>
          <%= form_with model: @cart_item, url: public_cart_item_path, local:true do |f| %>
          <td>
            <%= f.hidden_field :item_id, value: @cart_item.id %>
            <%= f.select :amount, options_for_select((1..20).to_a), include_blank: @cart_item.amount %>
            <%= f.submit '変更する', class:"btn btn-sm btn-danger px-2 py-1" %>
          </td>
          <td><%= @cart_item.price.to_s(:delimited, delimiter: ',') * @cart_item.amount %> </td>
          <% @sum += cart_item.price %>
          <td><%= f.submit '削除する', @cart_item, method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger px-2 py-1" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div>
      <lavel>合計金額</lavel>
      <span><%= @sum %></span>
    </div>
  </div>
  <div class="row">
  </div>
</div>