<div class="conteiner">
  
  <div class="row offset-3 mt-4 mb-2">
    <h5 class="px-3 bg-light">ショッピングカート</h5>
  </div>
  <div class="row">
    <table class="table-bordered col-7 offset-3">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th style="width:15%;">単価(税込)</th>
          <th style="width:15%;">数量</th>
          <th style="width:15%;">小計</th>
          <th colspan="3" style="width:15%;"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <% sum = 0%>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), local:true do |f| %>
              <td><%= attachment_image_tag cart_item.item, :image, size: "40x40", fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
              <td><%= cart_item.item.price.to_s(:delimited, delimiter: ',') %></td>
              <td class="text-center">
                <%= f.select :amount, options_for_select((1..20).to_a, selected: cart_item.amount) %>
                <%= f.submit '変更', class:"btn btn-sm btn-success ml-2 px-1 py-1" %>
              </td>
              <% sub_total = cart_item.item.price.to_i * cart_item.amount.to_i %>
              <% sum += sub_total %>
              <td><%= sub_total %></td>
              <td class="text-center">
                <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete,  "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger px-2 py-1" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row col-6 offset-3 mt-4 d-flex justify-content-between">
    <div>
      <%= link_to "買い物を続ける", root_path, class: 'nav-link btn btn-primary px-0 py-1 btn-ms' %>
    </div>
    <div class="mt-3">
      <lavel class="border border-dark pl-1 pr-5 py-3 bg-light">合計金額</lavel>
      <span><%= sum %></span>
    </div>
  </div>
  <div class="row">
  </div>
</div>