<div class="container">
  <div class="row col-4">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h5>
  </div>
  
  <div class="form-body mt-4 offset-1">
    <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">会員ID</label>
        <label><%= @customer.id %></label>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">氏名</label>
        <%= f.text_field :first_name , class:"form-control pl-0 mr-4 col-3" %>
        <%= f.text_field :last_name, class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">フリガナ</label>
        <%= f.text_field :first_name_kana, class:"form-control pl-0 mr-4 col-3" %>
        <%= f.text_field :last_name_kana, class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">郵便番号</label>
        <%= f.text_field :postal_code, class:"form-control overflow-auto pl-0 col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">住所</label>
        <%= f.text_field :address, class:"form-control pl-0 col-7" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">電話番号</label>
        <%= f.text_field :telephone_number, class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">メールアドレス</label>
        <%= f.text_field :email, class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">会員ステータス</label>
        <div class="custom-control custom-radio pl-0">
          <%= f.radio_button :is_active, 'true' %>
          <%= f.label :is_active, '有効', value: true %>
        </div>
        <div class="custom-control custom-radio">
          <%= f.radio_button :is_active, 'false' %>
          <%= f.label :is_active, '退会', value: false %>
        </div>
      </div>
      <div class="form-group offset-3">
        <%= f.submit '変更を保存', class:"btn btn-lg btn-info mt-4" %>
      </div>
    <% end %>
  </div>
</div>