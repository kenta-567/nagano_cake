<div class="container">
  <div class="row mt-2">
    <h5 class="col-2 mt-4 mx-5 mb-5 px-1  bg-light text-center"><strong><%= @customer.name %>さんの会員詳細</strong></h5>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="form-body col-7 ml-3">
      <table class="table table-borderless">
        <tr>
          <td><label>会員ID</label></td>
          <td><label><%= @customer.id %></span ></td>
        </tr>
        <tr>
          <td><label>氏名</label></td>
          <td><label><%= @customer.first_name %></span ><span><%= @customer.last_name %></span></td>
        </tr>
        <tr>
          <td><label>フリガナ</label></td>
          <td><span><%= @customer.first_name_kana %></span ><span><%= @customer.last_name_kana %></span ></td>
        </tr>
        <tr>
          <td><label>郵便番号</label></td>
          <td><label><%= @customer.postal_code %></label></td>
        </tr>
        <tr>
          <td><label>住所</label></td>
          <td><label><%= @customer.address %></label></td>
        </tr>
        <tr>
          <td><label>電話番号</label></td>
          <td><label><%= @customer.telephone_number %></label></td>
        </tr>
        <tr>
          <td><label>メールアドレス</label></td>
          <td><label><%= @customer.email %></label></td>
        </tr>
        <tr>
          <td><label>会員ステータス</label></td>
          <td><label><%= @customer.is_active == true ?  "有効" : "退会" %></label></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_customer_path, class: ' btn btn-lg  btn-info px-4 mt-4' %>
    <%= link_to "注文履歴一覧を見る", admin_order_path, class: ' btn btn-lg  btn-info px-4 mt-4' %>
  </div>
    
  
</div>