<div class="container">
  <div class="row">
    <h4 class="mb-5 mt-5 ml-4 mr-4  text-dark bg-light">商品一覧</h4> 
    <table class="table table-hover table-inverse bg-light">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.id %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
      
      
  </div>
</div>

