<div class="container">
  <div class="row">
    <div class="">
      <h5 class="my-4 mx-4 px-3 text-dark bg-light">商品一覧</h5>
    </div>
    <div class="ml-auto mt-2">
      <span class="nav-item">
        <%= link_to "+", new_admin_item_path, style: "width:3rem;height:3rem;", class: 'nav-link btn btn-light rounded-circle shadow-sm btn-lg' %>
      </span>
      
    </div>
  </div>  
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.id %></td>
          <td><%= item.is_active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

