<div class="container">
  
  <div class="row">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">商品新規登録</h5>
  </div>
  
  <div class="form-body">
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label">商品画像</label>
        <%= f.attachment_field :image, class: "w-100 from-control col-7" %>
      </div>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label text-left">商品名</label>
        <%= f.text_field :name, class:"form-control col-5", placeholder:"商品名" %>
      </div>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label text-left">商品説明</label>
        <%= f.text_area :caption, class:"form-control overflow-auto col-5", rows:"3", placeholder:"ここに説明文を記述します" %>
      </div>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label text-left">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: 'ジャンルを選択してください'}, class: 'genrelist__select' %>
      </div>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label text-left">税抜価格</label>
        <%= f.text_field :price, class:"form-control col-5", placeholder:"1000" %>円
      </div>
      <div class="form-group form-inline">
        <label class="col-3 control-label col-from-label">販売ステータス</label>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :is_active, '販売中' %>
          <%= f.label :is_active, '販売中', value: 1 %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :is_active, '販売停止中' %>
          <%= f.label :is_active, '販売停止中', value: 0 %>
        </div>
      </div>
      <div class="justify-content-center">
        <%= f.submit '新規登録', class:"btn btn-lg  btn-info mt-4" %>
      </div>
    <% end %>
  </div>
</div>