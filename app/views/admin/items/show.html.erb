<div class="container">
  <div class="row">
    <h5 class="col-2 m-4 px-1  bg-light text-center"><strong>商品詳細</strong></h5>
  </div>
  <div class="row">
    <div class="col-2">
        <%= attachment_image_tag @item, :image, size: "80x80", fallback: "no_image.jpg", class:"rounded-circle"; %>
    </div>
    <div class="form-body col-7">
      <div class="form-group text-center">
        <label>商品名</label>
        <label><%= @item.name %></label>
      </div>
      <div class="form-group text-center">
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div class="form-group text-center">
        <label>ジャンル</label>
        <%= @item.genre.name %>
      </div>
      <div class="form-group text-center">
        <label>税込価格<br>（税抜価格）</label>
        <%= @item.price %>
      </div>
      <div class="form-group text-center">
        <label>販売ステータス</label>
        <%= @item.is_active %>
      </div>
    </div>
    <div class="row">
      <%= link_to "編集", edit_admin_item_path, class: ' btn btn-md  btn-info mt-4 justify-content-center nav-link active' %>
    </div>
    
  </div>
</div>