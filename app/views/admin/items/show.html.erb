<div class="container">
  <div class="row mt-2">
    <h5 class="col-2 mt-4 mx-5 mb-5 px-1  bg-light text-center"><strong>商品詳細</strong></h5>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-3 pt-1 px-0">
        <%= attachment_image_tag @item, :image, size: "230x180", fallback: "no_image.jpg" %>
    </div>
    <div class="form-body col-7 ml-3">
      <table class="table table-borderless">
        <tr>
          <td style="width:30%;"><label>商品名</label></td>
          <td><label><%= @item.name %></label></td>
        </tr>
         <tr>
           <td><label>商品説明</label></td>
           <td><text><%= @item.introduction %></text></td>
         </tr>
         <tr>
           <td><label>ジャンル</label></td>
           <td><label><%= @item.genre.name %></label></td>
         </tr>
         <tr>
           <td><label>税込価格<br>(税抜価格)</label></td>
           <td><label><%= (@item.price * 1.1).round(2).ceil %></label> <label>(<%= @item.price %>)</label> 円</td>
         </tr>
         <tr>
           <td><label>販売ステータス</label></td>
           <td><label><%= @item.is_active == true ?  "販売中" : "販売停止中" %></label></td>
         </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集", edit_admin_item_path, class: ' btn btn-lg  btn-info px-4 mt-4' %>
  </div>
    
  
</div>