<div class="container">
  
  <div class="row offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">商品編集</h5>
  </div>
  
  <div class="form-body mt-4 offset-2">
    <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">商品画像</label>
        <%= f.attachment_field :image, class: "w-100 from-control pl-0 col-5" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">商品名</label>
        <%= f.text_field :name, class:"form-control col-5", placeholder:"商品名" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">商品説明</label>
        <%= f.text_area :introduction, class:"form-control overflow-auto col-5", rows:"3", placeholder:"ここに説明文を記述します" %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: 'ジャンルを選択してください'}, class: 'form-select d-block genrelist__select' %>
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">税抜価格</label>
        <%= f.text_field :price, class:"form-control col-5", placeholder:"1000" %>円
      </div>
      <div class="form-group row">
        <label class="col-3 control-label col-from-label">販売ステータス</label>
        <div class="custom-control custom-radio">
          <%= f.radio_button :is_active, 'true' %>
          <%= f.label :is_active, '販売中', value: true %>
        </div>
        <div class="custom-control custom-radio">
          <%= f.radio_button :is_active, 'false' %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
      </div>
      <div class="form-group offset-3">
        <%= f.submit '変更を保存', class:"btn btn-lg btn-info mt-4" %>
      </div>
    <% end %>
  </div>
</div>