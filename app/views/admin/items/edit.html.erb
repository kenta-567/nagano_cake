<div class="container">
  <div class="row offset-1">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">商品編集</h5>
  </div>
  
  <div class="form-body mt-4 offset-2">
    <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
      <div class="form-group row">
        <label class="col-2 mr-3 pt-1 control-label col-from-label">商品画像</label>
        <div class="item_image_btn">
          <%= f.attachment_field :image,  id: "file" %>
        </div>
        <div id="img_field" onClick="$('#file').click()" >
          <p>ファイルを選択</p>
        </div>
        <span class="p-2">選択されていません</span>
      </div>
      <div class="form-group row">
        <label class="col-2 mr-3 pt-1 control-label col-from-label text-left">商品名</label>
        <%= f.text_field :name, class:"form-control col-5", placeholder:"商品名" %>
      </div>
      <div class="form-group row">
        <label class="col-2 mr-3 pt-1 control-label col-from-label text-left">商品説明</label>
        <%= f.text_area :introduction, class:"form-control overflow-auto col-5", rows:"3", placeholder:"ここに説明文を記述します" %>
      </div>
      <div class="form-group row">
        <label class="col-2 mr-3 pt-1 control-label col-from-label text-left">ジャンル</label>
        <div class="col-5 px-0">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: '--選択してください--'}, class: 'form-select pl-0 form-control' %>
        </div>    
      </div>
      
      <div class="form-group row">
        <label class="col-2 mr-3 pt-1 control-label col-from-label text-left">税抜価格</label>
        <%= f.text_field :price, class:"form-control col-5", placeholder:"1000" %><span class="pt-2 pl-1">円</span>
      </div>
      <div class="form-group row">
        <label class="col-2 mr-3 pr-0 control-label col-from-label">販売ステータス</label>
        <div class="custom-control pl-0 custom-radio">
          <%= f.radio_button :is_active, 'true' %>
          <%= f.label :is_active, '販売中', value: true %>
        </div>
        <div class="custom-control custom-radio">
          <%= f.radio_button :is_active, 'false' %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
      </div>
      <div class="form-group row offset-3">
        <%= f.submit '変更を保存', class:"btn-new mt-4" %>
      </div>
    <% end %>
  </div>
</div>