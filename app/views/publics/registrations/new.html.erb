<div class="container">
  <div class="row">
    <h5 class="my-4 mx-4 px-3 text-dark bg-light">商品会員登録</h5>
  </div>
<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
　<div class="form-group row">
    <label class="col-3 control-label col-from-label">氏名</label>
      <label>(姓)</label>
      <%= f.text_field :first_name , class:"form-control pl-0 mr-4 col-3" %>
      <label>(名)</label>
      <%= f.text_field :last_name, class:"form-control pl-0 col-3" %>
  </div>
  <div class="form-group row">
    <label class="col-3 control-label col-from-label">フリガナ</label>
    　<label>(セイ)</label>
      <%= f.text_field :first_name_kana, class:"form-control pl-0 mr-4 col-3" %>
      <label>(メイ)</label>
      <%= f.text_field :last_name_kana, class:"form-control pl-0 col-3" %>
  </div>
  <div class="form-group row">
    <label class="col-3 control-label col-from-label">郵便番号(ハイフンなし)</label>
      <%= f.text_field :postal_code, class:"form-control overflow-auto pl-0 col-3" %>
  </div>
  <div class="form-group row">
    <label class="col-3 control-label col-from-label">住所</label>
      <%= f.text_field :address, class:"form-control pl-0 col-7" %>
  </div>
  <div class="form-group row">
    <label class="col-3 control-label col-from-label">電話番号</label>
      <%= f.text_field :telephone_number, class:"form-control pl-0 col-3" %>
  </div>
  <div class="form-group row">
    <label class="col-3 control-label col-from-label">メールアドレス</label>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control pl-0 col-3" %>
  </div>

  <div class="form-group row">
    <label class="col-3 control-label col-from-label">パスワード(6文字以上)</label>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control pl-0 col-3" %>
  </div>

  <div class="form-group row">
    <label class="col-3 control-label col-from-label">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control pl-0 col-3" %>
  </div>

  <div class="form-group offset-3">
    <%= f.submit '新規登録', class:"btn btn-lg btn-success mt-4" %>
  </div>
<% end %>
  </div>
</div>
