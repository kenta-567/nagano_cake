<div class="container">
  <div class="row offset-1">
    <label class=" mt-4 px-4 text-dark bg-light"><strong>ログイン</strong></label>
  </div> 
  <div class="row col-4 offset-1">
    <label class=" mt-4 px-3 text-dark bg-light">会員の方はこちらからログイン</label>
  </div> 
  <div class="row">
    <div class="form-body col-8 mx-auto m-4">
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <div class="form-group">
          <label class="col-3 control-label col-from-label">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, class:"from-control col-7", id:"inputEmail" %>
        </div>
        <div class="form-group mb-1">
          <label class="col-3 col-from-label">パスワード</label>
          <%= f.password_field :password, autocomplete: "current_password", class:"from-control col-7", id:"inputPassword" %>
        </div>
        <div class=" col-4 offset-3 pl-1">
          <%= f.submit "ログイン", class:"btn btn-md btn-primary px-5 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
  
  
  <div class="row col-3 offset-1 justify-content-center">
    <label class=" mt-4 px-3 text-dark bg-light">会員登録がお済みでない方</label>
  </div>
  <div class="row col-4 offset-2 justify-content-end">
    <span>
      <%= link_to new_customer_registration_path do %>
        <u>こちら</u>
      <% end %>
    </span>
    &emsp;<span>から新規登録を行ってください</span>
  </div>
</div>